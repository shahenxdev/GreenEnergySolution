@using System.Text.Json
@model JsonElement

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow p-4" style="border-radius: 12px;">
        <h2 class="text-center mb-4 text-success">Emission Summary</h2>

        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>Energy (kg CO2)</th>
                    <th>Transport (kg CO2)</th>
                    <th>Waste (kg CO2)</th>
                    <th>Total (kg CO2)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.GetProperty("energy").GetDouble()</td>
                    <td>@Model.GetProperty("transport").GetDouble()</td>
                    <td>@Model.GetProperty("waste").GetDouble()</td>
                    <td>@Model.GetProperty("total").GetDouble()</td>
                </tr>
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a asp-action="Add" class="btn btn-primary">Add More</a>
        </div>
    </div>
</div>
