@{
    ViewData["Title"] = "Add Emission";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-4" style="width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4 text-primary">Add Emission</h2>
        <form method="post" asp-action="Add">
            <div class="mb-3">
                <select name="type" class="form-select" required>
                    <option value="">Select Type</option>
                    <option value="Energy">Energy</option>
                    <option value="Transport">Transport</option>
                    <option value="Waste">Waste</option>
                </select>
            </div>
            <div class="mb-3">
                <input type="number" step="0.01" name="amount" class="form-control" placeholder="Amount in kg CO2" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Add</button>
        </form>
        @if (ViewBag.Error != null)
        {
            <p class="mt-3 text-danger text-center">@ViewBag.Error</p>
        }
    </div>
</div>
